# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agent Configuration - Model Selection
# Choose your model (uncomment one):
# CLAUDE_MODEL=claude-sonnet-4-20250514            # Sonnet 4 - Most capable (higher cost)
CLAUDE_MODEL=claude-3-5-haiku-20241022             # Haiku 3.5 - Fast & cheap ✅ RECOMMENDED!
# CLAUDE_MODEL=claude-3-5-sonnet-20241022          # Sonnet 3.5 - Balanced
# CLAUDE_MODEL=claude-3-opus-20240229              # Opus 3 - Very capable

MAX_TOKENS=4096
TEMPERATURE=0.7

# Safety Settings
# REQUIRE_CONFIRMATION options:
#   true  - Ask before each tool execution (with [y]es/[n]o/[a]ll options)
#   false - Auto-execute all tools without asking (⚠️ use with caution!)
REQUIRE_CONFIRMATION=true
DRY_RUN_MODE=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=agent.log
